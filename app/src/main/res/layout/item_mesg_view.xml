<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_back_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_px20"
        android:background="@color/edit_text_back_white"
        android:paddingBottom="@dimen/dimen_px20"
        android:paddingLeft="@dimen/dimen_px30"
        android:paddingRight="@dimen/dimen_px30"
        android:paddingTop="@dimen/dimen_px20">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dimen_px80"
            android:layout_height="@dimen/dimen_px80"
            android:src="@mipmap/icon_msg_logisics" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_px20">

            <TextView
                android:id="@+id/tv_logistics"
                style="@style/text_theme_black_size_28_41"
                android:text="订单物流信息"
                android:textSize="@dimen/dimen_px32" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_black_size_28_878f94"
                android:layout_alignParentRight="true"
                android:text="2017.10.25"
                android:textSize="@dimen/dimen_px32" />

            <TextView
                android:id="@+id/tv_detial"
                style="@style/text_black_size_28_878f94"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dimen_px20"
                android:layout_toLeftOf="@+id/tv_counts"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="订单已发货![台湾牛轧糖香葱…"
                android:textSize="@dimen/dimen_px32" />

            <TextView
                android:id="@+id/tv_counts"
                style="@style/text_white_size_26_ff"
                android:layout_width="@dimen/dimen_px50"
                android:layout_height="@dimen/dimen_px32"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/black_rectangle_btn_unpress_red"
                android:gravity="center"
                android:text="3"
                android:textSize="@dimen/dimen_px24" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>