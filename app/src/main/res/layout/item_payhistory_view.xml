<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_back_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_px160"
        android:layout_marginBottom="@dimen/dimen_px16"
        android:background="@color/edit_text_back_white"
        android:paddingLeft="@dimen/dimen_px30"
        android:paddingRight="@dimen/dimen_px30">

        <ImageView
            android:id="@+id/tv_payanther_status"
            android:layout_width="@dimen/dimen_px64"
            android:layout_height="@dimen/dimen_px64"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_px30"
            android:src="@mipmap/icon_payhistory_success" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_payanther_status"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_payanther_name"
                style="@style/text_theme_black_size_28_41"

                android:text="付款成功-李山山的代付申请"
                android:textSize="@dimen/dimen_px32" />

            <TextView
                android:id="@+id/tv_payanther_time"
                style="@style/text_black_size_28_878f94"
                android:layout_below="@+id/tv_payanther_name"
                android:layout_toRightOf="@id/tv_payanther_status"
                android:text="2017-08-30 12:36"
                android:textSize="@dimen/dimen_px32" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_payanther_status"
            android:gravity="center|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_payanther_price"
                style="@style/text_theme_black_size_28_41"
                android:text="-26.00"
                android:textSize="@dimen/dimen_px36" />

            <TextView
                android:id="@+id/tv_payanther_hint"
                style="@style/text_black_size_28_878f94"
                android:layout_below="@+id/tv_payanther_name"
                android:layout_toRightOf="@id/tv_payanther_status"
                android:text="系统未扣费"
                android:textColor="@color/auxiliary_text_red"
                android:textSize="@dimen/dimen_px26" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>