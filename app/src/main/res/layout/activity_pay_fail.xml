<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_back_white"
    android:orientation="vertical"
    tools:context="com.coopbuy.mall.ui.module.center.pay.PaySuccessActivity">

    <include layout="@layout/title_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/edit_text_back_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_px30"
        android:paddingRight="@dimen/dimen_px30">

        <ImageView
            android:layout_width="@dimen/dimen_px430"
            android:layout_height="@dimen/dimen_px284"
            android:layout_gravity="center"
            android:src="@mipmap/icon_pay_fail" />

        <TextView
            style="@style/text_theme_black_size_28_41"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_px36"
            android:text="支付失败，请重新支付"
            android:textSize="@dimen/dimen_px36"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"

            android:layout_marginTop="@dimen/dimen_px30"
            android:background="@color/gray_4" />


        <TextView
            style="@style/text_theme_black_size_28_41"
            android:layout_gravity="center|left"
            android:layout_marginTop="@dimen/dimen_px27"
            android:text="订单信息"
            android:textSize="@dimen/dimen_px32"
            android:textStyle="bold" />

        <TextView
            style="@style/text_theme_black_size_28_41"
            android:layout_gravity="center|left"
            android:layout_marginTop="@dimen/dimen_px10"
            android:text="该订单会为您保留12小时（从下单时间算起），12小时之后如果还未付款,系统将自动取消该订单"
            android:textSize="@dimen/dimen_px32" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_px59"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_detail"
                style="@style/text_theme_black_size_28_41"
                android:layout_gravity="center"
                android:background="@drawable/black_rectangle_btn_unpress_white"
                android:paddingBottom="@dimen/dimen_px30"
                android:paddingLeft="@dimen/dimen_px91"
                android:paddingRight="@dimen/dimen_px91"
                android:paddingTop="@dimen/dimen_px30"
                android:text="查看订单"
                android:textSize="@dimen/dimen_px30" />

            <TextView
                android:id="@+id/tv_pay_again"
                style="@style/text_theme_black_size_28_41"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_px50"
                android:background="@drawable/black_rectangle_btn_press_black"
                android:paddingBottom="@dimen/dimen_px30"
                android:paddingLeft="@dimen/dimen_px91"
                android:paddingRight="@dimen/dimen_px91"
                android:paddingTop="@dimen/dimen_px30"
                android:text="重新支付"
                android:textColor="@color/edit_text_back_white"
                android:textSize="@dimen/dimen_px30" />
        </LinearLayout>

        <TextView
            style="@style/text_black_size_28_878f94"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_px34"
            android:layout_marginTop="@dimen/dimen_px47"
            android:text="安全提示：供销好买平台及销售商不会以订单异常、系统升级为由要求您点击任何网址链接进行退款操作。" />
    </LinearLayout>
</LinearLayout>
