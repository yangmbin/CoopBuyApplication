<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">


    <!--第二部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_px30">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_image"
            android:layout_width="@dimen/dimen_px200"
            android:layout_height="@dimen/dimen_px200"
            android:background="@drawable/bg_round_corner_imageholder"
            android:scaleType="centerCrop"
            app:placeholderImage="@mipmap/default_img" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_px30"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_px80"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                        android:textColor="@color/theme_text_lab_black"
                        android:textSize="@dimen/text_size_px32" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥xxxx"
                        android:textColor="@color/black_9"
                        android:textSize="@dimen/text_size_px32"
                        android:visibility="invisible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_px20">

                    <TextView
                        android:id="@+id/propertyDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_px80"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="xxxx"
                        android:textColor="@color/text_gray_8"
                        android:textSize="@dimen/text_size_px28" />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="x x"
                        android:textColor="@color/text_gray_8"
                        android:textSize="@dimen/text_size_px28" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/refund_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款金额：￥23.5"
                android:textColor="@color/theme_text_title_orange"
                android:textSize="@dimen/text_size_px24"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
