<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_back_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_px96"
        android:layout_gravity="center_vertical"
        android:background="@color/edit_text_back_white"
        android:padding="@dimen/dimen_px30">

        <TextView
            android:id="@+id/tv_custom_name"
            style="@style/text_theme_black_size_30_h_match_41495c"
            android:layout_marginLeft="@dimen/dimen_px11"
            android:text="bill"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/text_theme_black_size_30_h_match_41495c"
            android:layout_marginLeft="@dimen/dimen_px11"
            android:layout_toRightOf="@+id/tv_custom_name"
            android:text="1398355455"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_order_status"
            style="@style/text_theme_black_size_30_h_match_41495c"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_px11"
            android:layout_toRightOf="@+id/iv_money"
            android:gravity="right|center"
            android:text="@string/lab_bill_confrim"
            android:textColor="@color/theme_text_title_orange"
            android:textSize="@dimen/dimen_px30" />
    </RelativeLayout>

    <include layout="@layout/line_div" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/edit_text_back_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_px30"
        android:paddingRight="@dimen/dimen_px30"
        android:paddingTop="@dimen/dimen_px46">

        <TextView
            android:id="@+id/tv_create_time"
            style="@style/text_black_size_28_878f94"
            android:text="创建时间：2017-45-7"
            android:textSize="@dimen/dimen_px26" />

        <TextView
            android:id="@+id/tv_goods_counts"
            style="@style/text_black_size_28_878f94"
            android:layout_marginTop="@dimen/dimen_px10"
            android:text="商品数量：5"
            android:textSize="@dimen/dimen_px26" />

        <TextView
            android:id="@+id/tv_all_price"
            style="@style/text_black_size_28_878f94"
            android:layout_marginTop="@dimen/dimen_px10"
            android:text="合计价格：￥65(含运费)"
            android:textSize="@dimen/dimen_px26" />

        <LinearLayout
            android:id="@+id/ll_wait_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_px60"
            android:orientation="horizontal">

            <TextView
                style="@style/text_black_size_28_878f94"
                android:layout_marginTop="@dimen/dimen_px10"
                android:text="距离关闭订单时间："
                android:textSize="@dimen/dimen_px26" />

            <TextView
                android:id="@+id/tv_close_time"
                style="@style/text_black_size_28_878f94"
                android:layout_marginTop="@dimen/dimen_px10"
                android:text="20时35分 "
                android:textColor="@color/red"
                android:textSize="@dimen/dimen_px26" />

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_px16"
        android:background="@color/edit_text_back_white"
        android:paddingBottom="@dimen/dimen_px15"
        android:paddingTop="@dimen/dimen_px64">

        <Button
            android:id="@+id/btn_logistics"
            android:layout_width="@dimen/dimen_px180"
            android:layout_height="@dimen/dimen_px60"
            android:layout_toLeftOf="@+id/btn_detail"
            android:background="@drawable/black_rectangle_btn_unpress_white"
            android:text="查看物流"
            android:textColor="@color/theme_text_lab_black"
            android:textSize="@dimen/dimen_px30" />

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="@dimen/dimen_px180"
            android:layout_height="@dimen/dimen_px60"
            android:layout_marginLeft="@dimen/dimen_px24"
            android:layout_toLeftOf="@+id/btn_call_custom"
            android:background="@drawable/black_rectangle_btn_unpress_white"
            android:text="@string/lab_billdetail_detial"
            android:textColor="@color/theme_text_lab_black"
            android:textSize="@dimen/dimen_px30" />

        <Button
            android:id="@+id/btn_call_custom"
            android:layout_width="@dimen/dimen_px180"
            android:layout_height="@dimen/dimen_px60"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_px30"
            android:layout_marginRight="@dimen/dimen_px30"
            android:background="@drawable/black_rectangle_btn_unpress_white"
            android:text="@string/lab_custom_call"
            android:textColor="@color/theme_text_lab_black"
            android:textSize="@dimen/dimen_px30" />
    </RelativeLayout>
</LinearLayout>