<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_px446"
        app:placeholderImage="@mipmap/default_img"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_round_corner_imageholder"/>

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dimen_px33"
        android:layout_marginBottom="@dimen/dimen_px21"
        android:textColor="@color/theme_text_lab_black"
        android:textSize="@dimen/dimen_px32"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_px36"
            android:textColor="@color/red_3"
            android:text="￥200.33"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dimen_px28"
            android:textColor="@color/gray_6"
            android:text="已售 123"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
