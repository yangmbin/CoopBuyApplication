<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_back_white"
    android:orientation="vertical"
    tools:context="com.coopbuy.mall.ui.module.center.pay.PaySuccessActivity">

    <include layout="@layout/title_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/edit_text_back_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_px30"
        android:paddingRight="@dimen/dimen_px30">

        <ImageView
            android:layout_width="@dimen/dimen_px430"
            android:layout_height="@dimen/dimen_px284"
            android:layout_gravity="center"
            android:src="@mipmap/icon_pay_success" />

        <TextView
            style="@style/text_theme_black_size_28_41"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_px36"
            android:text="支付方式：在线支付"
            android:textSize="@dimen/dimen_px36" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_px28"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/text_theme_black_size_28_41"
                android:layout_gravity="center"
                android:text="订单金额："
                android:textSize="@dimen/dimen_px36" />

            <TextView
                android:id="@+id/tv_order_paycount"
                style="@style/text_orange_size_26_f"
                android:layout_gravity="center"
                android:text="￥69.00"
                android:textSize="@dimen/dimen_px36" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_px55"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_detail"
                style="@style/text_theme_black_size_28_41"
                android:layout_gravity="center"
                android:background="@drawable/black_rectangle_btn_unpress_white"
                android:paddingBottom="@dimen/dimen_px30"
                android:paddingLeft="@dimen/dimen_px91"
                android:paddingRight="@dimen/dimen_px91"
                android:paddingTop="@dimen/dimen_px30"
                android:text="查看订单"
                android:textSize="@dimen/dimen_px30" />

            <TextView
                android:id="@+id/tv_go_home"
                style="@style/text_theme_black_size_28_41"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_px50"
                android:background="@drawable/black_rectangle_btn_unpress_white"
                android:paddingBottom="@dimen/dimen_px30"
                android:paddingLeft="@dimen/dimen_px91"
                android:paddingRight="@dimen/dimen_px91"
                android:paddingTop="@dimen/dimen_px30"
                android:text="回首页"
                android:textSize="@dimen/dimen_px30" />
        </LinearLayout>

        <TextView
            style="@style/text_black_size_28_878f94"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_px34"
            android:layout_marginTop="@dimen/dimen_px47"
            android:text="安全提示：供销好买平台及销售商不会以订单异常、系统升级为由要求您点击任何网址链接进行退款操作。" />
    </LinearLayout>
</LinearLayout>
