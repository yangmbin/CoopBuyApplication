<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_px100"
    android:orientation="vertical">

    <LinearLayout
        style="@style/center_LinearLayout_help_90"
        android:layout_height="@dimen/dimen_px100"
        android:background="@color/edit_text_back_white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_px30">

        <ImageView
            style="@style/image_center_40"
            android:layout_gravity="center"
            android:src="@mipmap/icon_bind_station" />

        <TextView
            style="@style/text_theme_black_size_28_41"
            android:layout_marginLeft="@dimen/dimen_px18"
            android:text="服务站"
            android:textSize="@dimen/dimen_px30"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_station_name"
            style="@style/text_theme_black_size_28_41"
            android:layout_marginLeft="@dimen/dimen_px30"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="银河达赖喇嘛电商服务站"
            android:textSize="@dimen/dimen_px30" />
    </LinearLayout>
</LinearLayout>