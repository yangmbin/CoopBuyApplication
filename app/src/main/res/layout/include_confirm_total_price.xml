<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_px90"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_confirm_count"
        style="@style/text_theme_black_size_28_41"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:text="共2件商品"
        android:textSize="@dimen/dimen_px24" />

    <TextView
        style="@style/text_theme_black_size_28_41"
        android:layout_width="wrap_content"
        android:gravity="center|right"
        android:text="小计:"
        android:layout_marginLeft="@dimen/dimen_px19"
        android:textSize="@dimen/dimen_px24" />

    <TextView
        android:id="@+id/m_confirm_total_price"
        style="@style/text_orange_size_26_f"
        android:layout_width="wrap_content"
        android:text="¥10.00"
        android:layout_marginLeft="@dimen/dimen_px19"
        android:gravity="bottom"
        android:textSize="@dimen/dimen_px24" />

</LinearLayout>