<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_px358"
        app:placeholderImage="@mipmap/default_img"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_round_corner_imageholder"/>

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dimen_px22"
        android:layout_marginBottom="@dimen/dimen_px25"
        android:layout_marginLeft="@dimen/dimen_px18"
        android:layout_marginRight="@dimen/dimen_px18"
        android:textColor="@color/theme_text_lab_black"
        android:textSize="@dimen/dimen_px26"
        android:text="TCL L55P2-UD 55英寸 4K纤薄强劲30核安卓HDR智TCL L55P2-UD 55英寸 4K纤薄强劲30核安卓HDR智"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_px18"
        android:layout_marginRight="@dimen/dimen_px18"
        android:layout_marginBottom="@dimen/dimen_px20">
        <TextView
            android:id="@+id/sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_px30"
            android:textColor="@color/theme_text_title_orange"
            android:text="¥200.33"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/sale_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dimen_px28"
            android:textColor="@color/auxiliary_text_blue_gray"
            android:text="已售：123"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
