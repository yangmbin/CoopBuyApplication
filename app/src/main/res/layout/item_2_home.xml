<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_image"
        android:layout_width="@dimen/dimen_px80"
        android:layout_height="@dimen/dimen_px80"
        android:scaleType="centerCrop"
        app:placeholderImage="@mipmap/default_img_small"
        android:background="@drawable/bg_circle"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_px12"
        android:text="分类"
        android:textSize="@dimen/text_size_px26"
        android:textColor="@color/theme_text_lab_black"/>
</LinearLayout>
