    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dimen_px20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/bg_market_item"
        android:paddingLeft="@dimen/dimen_px30"
        android:paddingRight="@dimen/dimen_px30"
        android:paddingTop="@dimen/dimen_px32"
        android:paddingBottom="@dimen/dimen_px30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_text_lab_black"
            android:textSize="@dimen/text_size_px36"
            android:text="活动主题"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_text_lab_black"
            android:textSize="@dimen/text_size_px26"
            android:layout_marginTop="@dimen/dimen_px18"
            android:text="活动说明15字"/>

    </LinearLayout>

</LinearLayout>
