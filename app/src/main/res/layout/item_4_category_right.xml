<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dimen_px120"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_px25"
        android:layout_marginLeft="@dimen/dimen_px25"
        android:layout_marginRight="@dimen/dimen_px25"
        android:layout_marginBottom="@dimen/dimen_px16">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="@dimen/dimen_px120"
            android:layout_height="@dimen/dimen_px120"
            android:scaleType="centerCrop"
            app:placeholderImage="@mipmap/default_img"
            android:background="@drawable/bg_round_corner_imageholder"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/theme_text_lab_black"
            android:textSize="@dimen/text_size_px22"
            android:layout_marginTop="@dimen/dimen_px17"
            android:text="厨房置物架"/>
    </LinearLayout>

</LinearLayout>
