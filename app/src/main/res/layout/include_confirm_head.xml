<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comfirm_head"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_back_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/edit_text_back_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_px40"
        android:paddingLeft="@dimen/dimen_px30"
        android:paddingTop="@dimen/dimen_px40">

        <ImageView
            style="@style/image_center_40"
            android:src="@mipmap/icon_order_address" />

        <LinearLayout
            android:id="@+id/m_rl_address_empty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px100"
            android:layout_marginRight="@dimen/dimen_px30"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_black_size_24_878f94"
                android:text="请添加/选择站点客户"
                android:textSize="@dimen/dimen_px36" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/m_ll_have_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_px30"
            android:layout_weight="1"
            android:orientation="vertical"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_tv_consignee"
                    style="@style/text_theme_black_size_28_41"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="@dimen/dimen_px36"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/m_tv_phone"
                    style="@style/text_theme_black_size_28_41"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_px19"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="@dimen/dimen_px36" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_px20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_tv_address_datail"
                    style="@style/text_theme_black_size_26_41495c"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text=""
                    android:textSize="@dimen/dimen_px30" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            style="@style/image_more"
            android:layout_marginLeft="@dimen/dimen_px40"
            android:layout_marginRight="@dimen/dimen_px30" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_px18"
        android:src="@mipmap/icon_address_div" />

    <include layout="@layout/include_divider_16px_line_theme_white" />
</LinearLayout>