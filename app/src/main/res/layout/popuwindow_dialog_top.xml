<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="@dimen/dimen_px20">

    <LinearLayout
        android:layout_width="@dimen/dimen_px250"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_sessionbox"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px84"
            android:layout_marginTop="@dimen/dimen_px12">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="@dimen/dimen_px46"
                android:layout_height="@dimen/dimen_px46"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_px24"
                android:src="@mipmap/icon_message" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_px18"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_px28" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_px30"
            android:layout_marginRight="@dimen/dimen_px30">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_px2"
                android:background="#7a7a7a" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_scan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px84">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/dimen_px46"
                android:layout_height="@dimen/dimen_px46"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_px24"
                android:src="@mipmap/icon_message" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_px18"
                android:text="扫一扫"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_px28" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_px30"
            android:layout_marginRight="@dimen/dimen_px30">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_px2"
                android:background="#7a7a7a" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px84">

            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="@dimen/dimen_px46"
                android:layout_height="@dimen/dimen_px46"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_px24"
                android:src="@mipmap/icon_message" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_px18"
                android:text="我的二维码"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_px28" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>