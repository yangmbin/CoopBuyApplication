<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_px300"
        android:paddingLeft="@dimen/dimen_px30"
        android:paddingRight="@dimen/dimen_px30"
        android:paddingTop="@dimen/dimen_px30">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_image"
            android:layout_width="@dimen/dimen_px200"
            android:layout_height="@dimen/dimen_px200"
            android:background="@drawable/bg_round_corner_imageholder"
            android:scaleType="centerCrop"
            app:placeholderImage="@mipmap/default_img" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_px30"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_px80"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                        android:textColor="@color/theme_text_lab_black"
                        android:textSize="@dimen/text_size_px32" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥xxxx"
                        android:textColor="@color/black_9"
                        android:textSize="@dimen/text_size_px32" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_px20">

                    <TextView
                        android:id="@+id/propertyDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_px80"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="xxxx"
                        android:textColor="@color/text_gray_8"
                        android:textSize="@dimen/text_size_px28" />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="x x"
                        android:textColor="@color/text_gray_8"
                        android:textSize="@dimen/text_size_px28" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/applyRefundBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_px30"
                    android:background="@drawable/shape_gray_2_no_solid_bg"
                    android:paddingBottom="@dimen/dimen_px16"
                    android:paddingLeft="@dimen/dimen_px26"
                    android:paddingRight="@dimen/dimen_px26"
                    android:paddingTop="@dimen/dimen_px16"
                    android:text="申请售后"
                    android:textColor="@color/theme_text_lab_black"
                    android:textSize="@dimen/text_size_px28"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/refundStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_px30"
                    android:paddingBottom="@dimen/dimen_px16"
                    android:paddingTop="@dimen/dimen_px16"
                    android:text="退款成功"
                    android:textColor="@color/theme_text_title_orange"
                    android:textSize="@dimen/text_size_px28"
                    android:layout_gravity="right" />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_px1"
        android:background="@color/theme_back_white"/>

</LinearLayout>
