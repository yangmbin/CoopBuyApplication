<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_px250"
    android:layout_height="@dimen/dimen_px60"
    android:background="@drawable/black_rectangle_btn_unpress_gray_f5"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_goods_sub"
        style="@style/image_center_44"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_px10"
        android:src="@mipmap/icon_shopcart_sub" />

    <EditText
        android:id="@+id/et_item_shopcart_cloth_num"
        style="@style/text_theme_black_size_26_41495c"
        android:background="@null"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:gravity="center"
        android:inputType="number"
        android:layout_marginRight="@dimen/dimen_px30"
        android:text="1" />

    <ImageView
        android:id="@+id/iv_goods_add"
        style="@style/image_center_44"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_px10"
        android:src="@mipmap/icon_shopcart_add" />
</RelativeLayout>