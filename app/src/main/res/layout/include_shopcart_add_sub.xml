<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_px250"
    android:layout_height="@dimen/dimen_px60"
    android:background="@drawable/black_rectangle_btn_unpress_gray_f5"
    android:orientation="horizontal">

    <LinearLayout android:id="@+id/iv_goods_sub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/et_item_shopcart_cloth_num">

        <ImageView

            style="@style/image_center_44"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_px10"
            android:src="@mipmap/icon_shopcart_sub" />
    </LinearLayout>


    <EditText
        android:id="@+id/et_item_shopcart_cloth_num"
        style="@style/text_theme_black_size_26_41495c"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dimen_px30"
        android:background="@null"
        android:focusable="false"
        android:gravity="center"
        android:inputType="number"
        android:text="1" />

    <LinearLayout android:id="@+id/iv_goods_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/et_item_shopcart_cloth_num"
        android:gravity="right">

        <ImageView

            style="@style/image_center_44"
            android:layout_gravity="center|right"
            android:layout_marginRight="@dimen/dimen_px10"
            android:src="@mipmap/icon_shopcart_add" />
    </LinearLayout>

</RelativeLayout>