<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:id="@+id/ll_category_item_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_category_img_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:placeholderImage="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/tv_category_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_category_item_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_category_img_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:placeholderImage="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/tv_category_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_category_item_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_category_img_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:placeholderImage="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/tv_category_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_2"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
