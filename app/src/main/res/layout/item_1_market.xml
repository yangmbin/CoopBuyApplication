<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_px310">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:placeholderImage="@mipmap/default_img"
            android:scaleType="centerCrop"
            android:background="@color/bitmap_base_color"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_px10"
            android:layout_marginBottom="@dimen/dimen_px10"
            android:layout_marginLeft="@dimen/dimen_px30"
            android:background="@color/white"
            android:padding="@dimen/dimen_px20">
            <LinearLayout
                android:layout_width="@dimen/dimen_px200"
                android:layout_height="@dimen/dimen_px120"
                android:orientation="vertical"
                android:background="@drawable/bg_round_corner_blue"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-09-26"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_px24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="八月初七"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_px36"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen_px19"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_px30">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="酉年【鸡年】"
                    android:textColor="@color/theme_text_lab_black"
                    android:textSize="@dimen/text_size_px28"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="己酉月 丙辰日"
                    android:textColor="@color/theme_text_lab_black"
                    android:textSize="@dimen/text_size_px28"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
