<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_px100">
        <View
            android:id="@+id/indicator_rect"
            android:layout_width="@dimen/dimen_px4"
            android:layout_height="@dimen/dimen_px40"
            android:background="@color/theme_text_title_orange"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抽你咋地"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_px28"
            android:textColor="@color/theme_text_lab_black"/>
    </RelativeLayout>

</LinearLayout>
