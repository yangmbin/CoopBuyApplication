<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.coopbuy.mall.ui.module.center.activity.AboutActivity">

    <include layout="@layout/title_bar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_px300"
        android:background="@color/edit_text_back_white">

        <ImageView
            android:id="@+id/iv_about_logo"
            android:layout_width="@dimen/dimen_px150"
            android:layout_height="@dimen/dimen_px150"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_px61"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/tv_version"
            style="@style/text_black_size_28_878f94"
            android:layout_below="@+id/iv_about_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_px25"
            android:text="当前版本：2.0" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_user_protocol"
        style="@style/center_LinearLayout_help_90"
        android:layout_marginTop="@dimen/dimen_px16">


        <TextView
            style="@style/text_theme_black_size_28_41"
            android:layout_marginLeft="@dimen/dimen_px31"
            android:layout_weight="1"
            android:text="@string/lab_about_user_protocol" />

        <ImageView
            style="@style/image_more"
            android:layout_marginRight="@dimen/dimen_px20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_xx_protocol"
        style="@style/center_LinearLayout_help_90"
        android:layout_marginTop="@dimen/dimen_px16">

        <TextView
            style="@style/text_theme_black_size_28_41"
            android:layout_marginLeft="@dimen/dimen_px31"
            android:layout_weight="1"
            android:text="@string/lab_about_xx_protocol" />

        <ImageView
            style="@style/image_more"
            android:layout_marginRight="@dimen/dimen_px20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_version_protocol"
        style="@style/center_LinearLayout_help_90"
        android:layout_marginTop="@dimen/dimen_px16">


        <TextView
            style="@style/text_theme_black_size_28_41"
            android:layout_marginLeft="@dimen/dimen_px31"
            android:layout_weight="1"
            android:text="@string/lab_about_version_msg" />

        <ImageView
            style="@style/image_more"
            android:layout_marginRight="@dimen/dimen_px20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_soft_protocol"
        style="@style/center_LinearLayout_help_90"
        android:layout_marginTop="@dimen/dimen_px16">


        <TextView
            style="@style/text_theme_black_size_28_41"
            android:layout_marginLeft="@dimen/dimen_px31"
            android:layout_weight="1"
            android:text="@string/lab_about_soft_protocol" />

        <ImageView
            style="@style/image_more"
            android:layout_marginRight="@dimen/dimen_px20" />
    </LinearLayout>
</LinearLayout>
