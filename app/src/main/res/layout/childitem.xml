<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_server"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/edit_text_back_white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_px15"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_px4"
                android:background="@color/theme_back_white" />

            <LinearLayout
                style="@style/center_LinearLayout_help_90"
                android:layout_height="@dimen/dimen_px100"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_px15"
                android:paddingLeft="@dimen/dimen_px30"
                android:paddingRight="@dimen/dimen_px30"
                android:paddingTop="@dimen/dimen_px30">

                <ImageView
                    style="@style/image_center_40"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_bind_server" />

                <TextView
                    style="@style/text_black_size_30_878f94"
                    android:layout_marginLeft="@dimen/dimen_px18"
                    android:text="请选择为你服务的站点人员"
                    android:textSize="@dimen/dimen_px30"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_station"
            style="@style/center_LinearLayout_help_90"
            android:layout_height="@dimen/dimen_px100"
            android:layout_marginLeft="@dimen/dimen_px30"
            android:layout_marginRight="@dimen/dimen_px30"
            android:layout_marginTop="@dimen/dimen_px15"
            android:background="@drawable/shape_orange_no_solid_bind"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_px30">

            <TextView
                android:id="@+id/tv_stationer_name"
                style="@style/text_theme_black_size_28_41"
                android:layout_marginLeft="@dimen/dimen_px18"
                android:text="青青"
                android:textSize="@dimen/dimen_px32"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_station_mark"
                style="@style/image_center_40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_px16"
                android:layout_toRightOf="@+id/tv_stationer_name"
                android:src="@mipmap/icon_bind_stationer" />

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="@dimen/dimen_px40"
                android:layout_height="@dimen/dimen_px40"
                android:layout_alignParentRight="true"
                android:background="@mipmap/icon_bind_check"
                android:button="@null" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px15"
            android:background="@color/edit_text_back_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_px30"
            android:background="@color/theme_back_white" />
    </LinearLayout>

</LinearLayout>