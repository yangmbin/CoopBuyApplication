<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/edit_text_back_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/m_ll_paly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_px125"
        android:background="@color/edit_text_back_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_paly"
            android:layout_width="@dimen/dimen_px40"
            android:layout_height="@dimen/dimen_px40"
            android:layout_marginLeft="@dimen/dimen_px39"
            android:src="@mipmap/icon_address_checked" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_pay_logo"
            android:layout_width="@dimen/dimen_px78"
            android:layout_height="@dimen/dimen_px78"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_px38"
            android:scaleType="centerCrop"
            app:placeholderImage="@mipmap/default_img" />

        <TextView
            android:id="@+id/pay_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_px23"
            android:layout_weight="1"
            android:text="支付宝支付"
            android:textColor="@color/deteal_text"
            android:textSize="19dp" />


    </LinearLayout>

    <include layout="@layout/include_divider_1px_line_theme_white" />
</LinearLayout>