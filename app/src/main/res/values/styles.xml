<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- APP更新对话框样式 -->
    <style name="APPUpdateDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--  登录页LinearLayout包含edit的样式-->
    <style name="LinearLayout_contain_edit">
        <item name="android:layout_height">@dimen/dimen_px100</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dimen_px30</item>
        <item name="android:layout_marginRight">@dimen/dimen_px30</item>
        <item name="android:background">@color/edit_text_back_white</item>
        <item name="android:padding">@dimen/dimen_px30</item>
    </style>

    <style name="LinearLayout_contain_edit_no_padding">
        <item name="android:layout_height">@dimen/dimen_px100</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dimen_px30</item>
        <item name="android:layout_marginRight">@dimen/dimen_px30</item>
        <item name="android:background">@color/edit_text_back_white</item>
    </style>
    <!--    登录输入框-->
    <style name="login_edit">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/dimen_px100</item>
        <item name="android:maxWidth">@dimen/dimen_px400</item>
        <item name="android:textColorHint">@color/auxiliary_text_blue_gray</item>
        <item name="android:textColor">@color/theme_text_lab_black</item>
        <item name="android:textSize">@dimen/dimen_px30</item>
        <item name="android:background">@null</item>
    </style>
    <!--登录 button-->
    <style name="login_btn">
        <item name="android:layout_height">@dimen/dimen_px88</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dimen_px135</item>
        <item name="android:layout_marginRight">@dimen/dimen_px135</item>
        <item name="android:textColor">@color/edit_text_back_white</item>
        <item name="android:textSize">@dimen/dimen_px30</item>
        <item name="android:background">@drawable/black_rectangle_btn_unpress_gray</item>
    </style>
    <!--  黑色文字28px-->
    <style name="text_black_size_28">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/dimen_px28</item>
    </style>
    <!--  灰黑黑色文字26px-->
    <style name="text_black_gary_size_26">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_gray_8</item>
        <item name="android:textSize">@dimen/dimen_px26</item>
    </style>
    <!--  灰黑黑色文字26px-->
    <style name="text_theme_black_size_22">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/theme_text_lab_black</item>
        <item name="android:textSize">@dimen/dimen_px22</item>
    </style>
    <!--  灰黑黑色文字26px  666666-->
    <style name="text_black_gary_size_26_6">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_gray_6</item>
        <item name="android:textSize">@dimen/dimen_px26</item>
    </style>
    <!--  c橙色文字26px  -->
    <style name="text_orange_size_26_f">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/theme_text_title_orange</item>
        <item name="android:textSize">@dimen/dimen_px26</item>
    </style>
    <!--  黑色文字30px-->
    <style name="text_theme_black_size_30_h_match">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/theme_text_lab_black</item>
        <item name="android:textSize">@dimen/dimen_px30</item>
        <item name="android:gravity">center</item>
    </style>
    <!--数据清理-->
    <style name="image_clear">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@mipmap/icon_delete_login_delete</item>
    </style>
    <!--    密码是否可见-->
    <style name="image_visible">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/icon_eye_login_open</item>
    </style>
</resources>
